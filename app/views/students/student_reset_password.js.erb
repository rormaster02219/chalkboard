<%if !@student.blank?%>
  
	window.location.href="<%=static_pages_home_path(:note=>"reset password")%>"
<%else%>
	<%if(params[:confirm_password]!=params[:password])%>
	$("#reset-password-error").html("Password doesn't match");
	<%elsif (params[:confirm_password].blank? && params[:password].blank?)%>
	$("#reset-password-error").html("Password cant be blank");
	<%elsif (params[:confirm_password].blank?)%>
	$("#reset-password-error").html("Password cant be blank");
	<%elsif (params[:password].blank?)%>
	$("#reset-password-error").html("Password cant be blank");
	<%else%>
	 $("#reset-password-error").html("Password is too short (minimum is 6 characters)");
	<%end%>
<%end%>
