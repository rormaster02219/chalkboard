	if(email == "") {
    	$("#reset-error").html('Please enter Email')
    }
    else if(email.match(r) == null ) {
    	$("#reset-error").html('Email is Invalid')
    }
    else if(student == ""){
    	$("#reset-error").html("Email doesn't exists. Please Register.");
    }
    else {
    	$("#reset-error").html("");
		$(".forgot_password").hide();
		window.location.href = '/static_pages/home?id=forget_password';
    }
}

