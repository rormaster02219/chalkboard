    var value = $(this).val();
    console.log(value);
    $.ajax({
        type : 'GET',
        url : "/subjects/<%= params[:subject] %>/<%= params[:module_test] %>",
        data: {'sort_by' : value },
        success: function (data) {
	  }
        });

});
</script>
